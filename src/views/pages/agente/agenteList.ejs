<%- include('../../partials/head') %>
<%- include('../../partials/navbar') %>
<%- include('../../partials/msj') %>

<div class="container  text-light">
    <div class="d-flex justify-content-between align-items-center border-bottom border-secondary border-opacity-25">
        <div>
            <h3 class="fw-bold"><i class="bi bi-people-fill text-info me-2"></i>Agentes</h3>
            <p class="text-secondary mb-0">Administraci√≥n de personal y equipo ETR</p>
        </div>
        <a href="/ciie/dashboard" class="btn btn-outline-light btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>

    <div class="card bg-body-tertiary border border-secondary border-opacity-25 shadow-lg">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead class="table-light"> 
                    <tr>
                        <th class="ps-4">Apellido y Nombre</th>
                        <th>CUIL</th>
                        <th>Estado</th>
                        <th>Cargos</th>
                        <th class="text-center pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    <% agentes.forEach(a => { %>
                        <% const idHtml = a.referenciaId.cuil; %>
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold text-white"><%= a.referenciaId.apellido %>, <%= a.referenciaId.nombre %></span>
                            </td>
                            <td>
                                <small class="text-secondary opacity-75"><%= a.referenciaId.cuil %></small>
                            </td>
                            <td>
                                <span class="badge border 
                                    <%= a.estado === 'aprobado' ? 'border-success text-success bg-success bg-opacity-10' : 
                                       (a.estado === 'rechazado' ? 'border-danger text-danger bg-danger bg-opacity-10' : 
                                       'border-warning text-warning bg-warning bg-opacity-10') %> rounded-pill px-3">
                                    <%= a.estado.toUpperCase() %>
                                </span>
                            </td>
                            <td>
                                <span class="small text-secondary"><i class="bi bi-clock-history me-1"></i>Pendiente</span>
                            </td>
                            <td class="text-center pe-4">
                                <div id="acciones-<%= idHtml %>" class="<%= a.estado === 'pendiente' ? 'd-flex justify-content-center gap-2' : 'd-none' %>">
                                    <form action="/ciie/agente/cambiar-estado/<%= a.referenciaId.dni %>" method="POST">
                                        <input type="hidden" name="nuevoEstado" value="aprobado">
                                        <button class="btn btn-sm btn-success"><i class="bi bi-check-lg"></i></button>
                                    </form>
                                    <form action="/ciie/agente/cambiar-estado/<%= a.referenciaId.dni %>" method="POST">
                                        <input type="hidden" name="nuevoEstado" value="rechazado">
                                        <button class="btn btn-sm btn-danger"><i class="bi bi-x-lg"></i></button>
                                    </form>
                                </div>

                                <div class="d-flex align-items-center justify-content-center">
                                    <a href="/ciie/agentes/gestion/<%= a.referenciaId.dni %>"
                                       class="btn btn-sm btn-info fw-bold <%= a.estado === 'pendiente' ? 'd-none' : '' %>">
                                        Acceder <i class="bi bi-chevron-right"></i>
                                    </a>
                                    <% if(a.estado !== 'pendiente') { %>
                                        <button class="btn btn-link btn-sm text-info ms-2 p-0 text-decoration-none" onclick="toggleEdicion('<%= idHtml %>')">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function toggleEdicion(id) {
        const divAcciones = document.getElementById('acciones-' + id);
        if (divAcciones) {
            divAcciones.classList.toggle('d-none');
            divAcciones.classList.toggle('d-flex');
        }
    }
</script>

<%- include('../../partials/scripts') %>